version: '3'

services:
  gitolite:
    image: registry.terry.cloud/stacks/gitolite:1.0.0
    volumes:
      - ${SRV_APPDATA}/persistent/home:/home/git
      - ${SRV_APPDATA}/persistent/hostkeys:/etc/ssh/hostkeys
    ports:
      - '{{= hosts.backend.port }}:22'
    networks:
      - internal
    deploy:
      replicas: 1
  cgit:
    image: registry.terry.cloud/stacks/cgit:1.0.1
    volumes:
      - ${SRV_APPDATA}/persistent/home:/home/git
      - ${SRV_APPDATA}/resources/frontend-htpasswd:/etc/lighttpd/.passwd
    networks:
      - revprox_ingress
    deploy:
      replicas: 1
      labels:
        - "traefik.docker.network=revprox_ingress"
        - "traefik.port={{= hosts.frontend.port }}"
        - "traefik.backend={{= hosts.frontend.domain }}"
        - "traefik.frontend.rule=Host:{{= hosts.frontend.domain }}"

networks:
  internal:
    driver: overlay
  revprox_ingress:
    external: true
